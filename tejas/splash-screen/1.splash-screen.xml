<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011F4B"
    tools:context=".SplashScreen">

    <!-- Application Logo with centered alignment -->
    <!-- This ImageView displays the app logo at the top of the screen -->
    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/app_logo"
        android:contentDescription="App Logo"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main App Title with emphasis -->
    <!-- This TextView displays the name of the application in bold and large font size -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IIT Connect"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FFC107"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/splash_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Slogan or tagline for the app -->
    <!-- This TextView contains a short tagline that describes the app's purpose -->
    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect | Explore | Grow"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer text displaying app affiliation -->
    <!-- This TextView appears at the bottom and provides additional branding information -->
    <TextView
        android:id="@+id/footer_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by IIT Tirupati"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
